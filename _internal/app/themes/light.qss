/* Light Theme for PulseDrop Pro */

/* Main Application */
QMainWindow {
    background-color: #f5f5f5;
    color: #333333;
}

QWidget {
    background-color: #f5f5f5;
    color: #333333;
    font-family: 'Segoe UI', Arial, sans-serif;
    font-size: 9pt;
}

/* Menu Bar */
QMenuBar {
    background-color: #ffffff;
    color: #333333;
    border-bottom: 1px solid #d0d0d0;
}

QMenuBar::item {
    background-color: transparent;
    padding: 4px 8px;
}

QMenuBar::item:selected {
    background-color: #e0e0e0;
}

QMenu {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
}

QMenu::item {
    padding: 6px 20px;
}

QMenu::item:selected {
    background-color: #e0e0e0;
}

/* Buttons */
QPushButton {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 6px 12px;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #f0f0f0;
    border-color: #c0c0c0;
}

QPushButton:pressed {
    background-color: #e0e0e0;
}

QPushButton:disabled {
    background-color: #f8f8f8;
    color: #a0a0a0;
    border-color: #e0e0e0;
}

/* Special Button Styles */
QPushButton#refresh_btn {
    background-color: #0078d4;
    color: #ffffff;
    border-color: #106ebe;
}

QPushButton#refresh_btn:hover {
    background-color: #106ebe;
}

QPushButton#block_btn {
    background-color: #d13438;
    color: #ffffff;
    border-color: #b02a2e;
}

QPushButton#block_btn:hover {
    background-color: #b02a2e;
}

QPushButton#smart_mode_btn {
    background-color: #107c10;
    color: #ffffff;
    border-color: #0e6e0e;
}

QPushButton#smart_mode_btn:hover {
    background-color: #0e6e0e;
}

/* List Widgets */
QListWidget {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 4px;
}

QListWidget::item {
    padding: 6px 8px;
    border-radius: 2px;
}

QListWidget::item:selected {
    background-color: #e0e0e0;
}

QListWidget::item:hover {
    background-color: #f0f0f0;
}

/* Scroll Bars */
QScrollBar:vertical {
    background-color: #f0f0f0;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background-color: #c0c0c0;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #f0f0f0;
    height: 12px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background-color: #c0c0c0;
    border-radius: 6px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Labels */
QLabel {
    color: #333333;
    background-color: transparent;
}

QLabel#title {
    font-size: 14pt;
    font-weight: bold;
    color: #333333;
}

QLabel#subtitle {
    font-size: 11pt;
    color: #666666;
}

QLabel#status {
    color: #888888;
    font-style: italic;
}

/* Line Edits */
QLineEdit {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 6px 8px;
}

QLineEdit:focus {
    border-color: #0078d4;
}

QLineEdit:disabled {
    background-color: #f8f8f8;
    color: #a0a0a0;
}

/* Combo Boxes */
QComboBox {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 6px 8px;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid #333333;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    selection-background-color: #e0e0e0;
}

/* Check Boxes */
QCheckBox {
    color: #333333;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #d0d0d0;
    border-radius: 3px;
    background-color: #ffffff;
}

QCheckBox::indicator:checked {
    background-color: #0078d4;
    border-color: #106ebe;
}

QCheckBox::indicator:unchecked:hover {
    border-color: #c0c0c0;
}

/* Radio Buttons */
QRadioButton {
    color: #333333;
    spacing: 8px;
}

QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #d0d0d0;
    border-radius: 8px;
    background-color: #ffffff;
}

QRadioButton::indicator:checked {
    background-color: #0078d4;
    border-color: #106ebe;
}

/* Group Boxes */
QGroupBox {
    color: #333333;
    font-weight: bold;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    margin-top: 8px;
    padding-top: 8px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 8px;
    padding: 0 4px 0 4px;
}

/* Tabs */
QTabWidget::pane {
    border: 1px solid #d0d0d0;
    background-color: #f5f5f5;
}

QTabBar::tab {
    background-color: #ffffff;
    color: #333333;
    padding: 8px 16px;
    border: 1px solid #d0d0d0;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QTabBar::tab:selected {
    background-color: #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}

QTabBar::tab:hover {
    background-color: #f0f0f0;
}

/* Progress Bars */
QProgressBar {
    background-color: #f0f0f0;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    text-align: center;
    color: #333333;
}

QProgressBar::chunk {
    background-color: #0078d4;
    border-radius: 3px;
}

/* Sliders */
QSlider::groove:horizontal {
    background-color: #f0f0f0;
    border: 1px solid #d0d0d0;
    height: 6px;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    background-color: #c0c0c0;
    border: 1px solid #a0a0a0;
    width: 16px;
    margin: -5px 0;
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background-color: #a0a0a0;
}

/* Tool Tips */
QToolTip {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 4px;
}

/* Status Bar */
QStatusBar {
    background-color: #ffffff;
    color: #333333;
    border-top: 1px solid #d0d0d0;
}

/* Dock Widgets */
QDockWidget {
    titlebar-close-icon: none;
    titlebar-normal-icon: none;
}

QDockWidget::title {
    background-color: #ffffff;
    color: #333333;
    padding: 4px;
    border: 1px solid #d0d0d0;
}

/* Message Boxes */
QMessageBox {
    background-color: #f5f5f5;
    color: #333333;
}

QMessageBox QPushButton {
    min-width: 80px;
    min-height: 24px;
}

/* Custom Widgets */
QWidget#sidebar {
    background-color: #ffffff;
    border-right: 1px solid #d0d0d0;
}

QWidget#content {
    background-color: #f5f5f5;
}

QWidget#device_list {
    background-color: #ffffff;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
}

QWidget#graph {
    background-color: #ffffff;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
}

/* Enhanced Graph Components */
QWidget#graph_panel {
    background-color: #ffffff;
    border: none;
}

QWidget#graph_widget {
    background-color: #fafafa;
    border: 2px solid #d0d0d0;
    border-radius: 8px;
    padding: 8px;
}

QFrame#stats_frame {
    background-color: #f5f5f5;
    border: 1px solid #d0d0d0;
    border-radius: 6px;
    padding: 8px;
}

QFrame#legend_frame {
    background-color: #f5f5f5;
    border: 1px solid #d0d0d0;
    border-radius: 6px;
    padding: 8px;
}

QLabel#graph_title {
    color: #ffffff;
    font-size: 16px;
    font-weight: bold;
    padding: 4px 8px;
    background-color: #2d5aa0;
    border-radius: 6px;
}

QLabel#stat_label {
    color: #333333;
    font-size: 12px;
    font-weight: 500;
    padding: 2px 6px;
    background-color: #e0e0e0;
    border-radius: 4px;
}

QLabel#status_label {
    color: #4caf50;
    font-size: 12px;
    font-weight: 500;
    padding: 4px 8px;
    background-color: #1b5e20;
    border-radius: 4px;
}
